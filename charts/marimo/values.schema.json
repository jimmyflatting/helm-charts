{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["onyxia", "image", "service", "resources"],
  "properties": {
    "onyxia": {
      "type": "object",
      "required": ["enabled", "instance"],
      "properties": {
        "enabled": {
          "type": "boolean",
          "const": true,
          "description": "Enable Onyxia integration"
        },
        "instance": {
          "type": "object",
          "required": ["name", "friendlyName", "description", "category", "logo", "initScript", "ports", "env", "resources", "securityContext", "serviceAccount", "annotations"],
          "properties": {
            "name": {
              "type": "string",
              "description": "Instance name"
            },
            "friendlyName": {
              "type": "string",
              "description": "Friendly name for the instance"
            },
            "description": {
              "type": "string",
              "description": "Instance description"
            },
            "category": {
              "type": "string",
              "description": "Instance category"
            },
            "logo": {
              "type": "string",
              "description": "Logo URL"
            },
            "initScript": {
              "type": "string",
              "description": "Initialization script"
            },
            "ports": {
              "type": "array",
              "items": {
                "type": "object",
                "required": ["name", "port", "targetPort"],
                "properties": {
                  "name": {
                    "type": "string"
                  },
                  "port": {
                    "type": "integer"
                  },
                  "targetPort": {
                    "type": "integer"
                  }
                }
              }
            },
            "env": {
              "type": "array",
              "items": {
                "type": "object",
                "required": ["name", "value"],
                "properties": {
                  "name": {
                    "type": "string"
                  },
                  "value": {
                    "type": "string"
                  }
                }
              }
            },
            "resources": {
              "x-onyxia": {
                "overwriteSchemaWith": "ide/resources.json"
              }
            },
            "securityContext": {
              "type": "object",
              "required": ["runAsNonRoot", "runAsUser", "fsGroup"],
              "properties": {
                "runAsNonRoot": {
                  "type": "boolean",
                  "const": true
                },
                "runAsUser": {
                  "type": "integer"
                },
                "fsGroup": {
                  "type": "integer"
                }
              }
            },
            "serviceAccount": {
              "x-onyxia": {
                "overwriteSchemaWith": "ide/role.json"
              }
            },
            "annotations": {
              "type": "object",
              "required": ["onyxia.region", "onyxia.project", "onyxia.instance"],
              "properties": {
                "onyxia.region": {
                  "type": "string",
                  "const": "default"
                },
                "onyxia.project": {
                  "type": "string",
                  "const": "single-project"
                },
                "onyxia.instance": {
                  "type": "string"
                }
              }
            }
          }
        }
      }
    },
    "image": {
      "type": "object",
      "required": ["repository", "tag", "pullPolicy"],
      "properties": {
        "repository": {
          "type": "string"
        },
        "tag": {
          "type": "string"
        },
        "pullPolicy": {
          "type": "string",
          "enum": ["Always", "IfNotPresent", "Never"]
        }
      }
    },
    "service": {
      "type": "object",
      "required": ["type", "port"],
      "properties": {
        "type": {
          "type": "string",
          "enum": ["ClusterIP", "NodePort", "LoadBalancer"]
        },
        "port": {
          "type": "integer"
        }
      }
    },
    "resources": {
      "x-onyxia": {
        "overwriteSchemaWith": "ide/resources.json"
      }
    },
    "securityContext": {
      "type": "object",
      "required": ["runAsNonRoot", "runAsUser", "fsGroup"],
      "properties": {
        "runAsNonRoot": {
          "type": "boolean",
          "const": true
        },
        "runAsUser": {
          "type": "integer"
        },
        "fsGroup": {
          "type": "integer"
        }
      }
    },
    "env": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["name", "value"],
        "properties": {
          "name": {
            "type": "string"
          },
          "value": {
            "type": "string"
          }
        }
      }
    },
    "serviceAccount": {
      "x-onyxia": {
        "overwriteSchemaWith": "ide/role.json"
      }
    },
    "autoscaling": {
      "type": "object",
      "required": ["enabled", "minReplicas", "maxReplicas", "targetCPUUtilizationPercentage", "targetMemoryUtilizationPercentage", "scaleDownDelaySeconds", "scaleUpDelaySeconds"],
      "properties": {
        "enabled": {
          "type": "boolean"
        },
        "minReplicas": {
          "type": "integer"
        },
        "maxReplicas": {
          "type": "integer"
        },
        "targetCPUUtilizationPercentage": {
          "type": "integer"
        },
        "targetMemoryUtilizationPercentage": {
          "type": "integer"
        },
        "scaleDownDelaySeconds": {
          "type": "integer"
        },
        "scaleUpDelaySeconds": {
          "type": "integer"
        }
      }
    },
    "onyxiaSchema": {
      "type": "object",
      "required": ["version", "catalog", "chart", "type", "maintainers", "keywords", "home", "sources", "dependencies"],
      "properties": {
        "version": {
          "type": "string"
        },
        "catalog": {
          "type": "string"
        },
        "chart": {
          "type": "string"
        },
        "type": {
          "type": "string",
          "enum": ["application", "library"]
        },
        "maintainers": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["name", "email"],
            "properties": {
              "name": {
                "type": "string"
              },
              "email": {
                "type": "string"
              }
            }
          }
        },
        "keywords": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "home": {
          "type": "string"
        },
        "sources": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "dependencies": {
          "type": "array",
          "items": {
            "type": "object"
          }
        }
      }
    }
  }
} 