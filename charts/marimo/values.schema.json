{
  "$schema": "http://json-schema.org/schema#",
  "type": "object",
  "properties": {
    "service": {
      "type": "object",
      "title": "Service Configuration",
      "properties": {
        "port": {
          "type": "integer",
          "title": "Port",
          "default": 8080,
          "description": "Port to expose the service"
        }
      }
    },
    "ingressRoute": {
      "type": "object",
      "title": "Traefik IngressRoute Configuration",
      "properties": {
        "enabled": {
          "type": "boolean",
          "title": "Enable Traefik IngressRoute",
          "default": true,
          "form": true
        },
        "host": {
          "type": "string",
          "title": "Host",
          "form": true
        },
        "path": {
          "type": "string",
          "title": "Path",
          "default": "/",
          "form": true
        },
        "tls": {
          "type": "object",
          "properties": {
            "enabled": {
              "type": "boolean",
              "title": "Enable TLS",
              "default": true,
              "form": true
            },
            "secretName": {
              "type": "string",
              "title": "TLS Secret Name",
              "form": true
            }
          }
        }
      }
    },
    "resources": {
      "type": "object",
      "title": "Resources",
      "properties": {
        "requests": {
          "type": "object",
          "properties": {
            "cpu": {
              "type": "string",
              "title": "CPU request",
              "default": "500m",
              "form": true
            },
            "memory": {
              "type": "string",
              "title": "Memory request",
              "default": "1Gi",
              "form": true
            }
          }
        },
        "limits": {
          "type": "object",
          "properties": {
            "cpu": {
              "type": "string",
              "title": "CPU limit",
              "default": "1000m",
              "form": true
            },
            "memory": {
              "type": "string",
              "title": "Memory limit",
              "default": "2Gi",
              "form": true
            }
          }
        }
      }
    },
    "persistence": {
      "type": "object",
      "title": "Persistence",
      "properties": {
        "enabled": {
          "type": "boolean",
          "title": "Enable persistence",
          "default": true,
          "form": true
        },
        "size": {
          "type": "string",
          "title": "Storage size",
          "default": "10Gi",
          "form": true
        }
      }
    },
    "onyxia": {
      "type": "object",
      "title": "Onyxia Integration",
      "properties": {
        "s3": {
          "type": "object",
          "title": "S3 Integration",
          "properties": {
            "enabled": {
              "type": "boolean",
              "title": "Enable S3 Integration",
              "default": true,
              "form": true
            }
          }
        },
        "auth": {
          "type": "object",
          "title": "Authentication",
          "properties": {
            "enabled": {
              "type": "boolean",
              "title": "Enable OIDC Authentication",
              "default": true,
              "form": true
            }
          }
        }
      }
    }
  }
}