{
  "$schema": "http://json-schema.org/schema#",
  "type": "object",
  "required": ["service", "resources", "persistence"],
  "properties": {
    "service": {
      "type": "object",
      "title": "Service Configuration",
      "required": ["port"],
      "properties": {
        "port": {
          "type": "integer",
          "title": "Port",
          "default": 8080,
          "description": "Port to expose the service"
        }
      }
    },
    "resources": {
      "type": "object",
      "title": "Resources",
      "required": ["requests", "limits"],
      "properties": {
        "requests": {
          "type": "object",
          "required": ["cpu", "memory"],
          "properties": {
            "cpu": {
              "type": "string",
              "title": "CPU request",
              "default": "500m",
              "form": true
            },
            "memory": {
              "type": "string",
              "title": "Memory request",
              "default": "1Gi",
              "form": true
            }
          }
        },
        "limits": {
          "type": "object",
          "required": ["cpu", "memory"],
          "properties": {
            "cpu": {
              "type": "string",
              "title": "CPU limit",
              "default": "1000m",
              "form": true
            },
            "memory": {
              "type": "string",
              "title": "Memory limit",
              "default": "2Gi",
              "form": true
            }
          }
        }
      }
    },
    "persistence": {
      "type": "object",
      "title": "Persistence",
      "required": ["enabled", "size"],
      "properties": {
        "enabled": {
          "type": "boolean",
          "title": "Enable persistence",
          "default": true,
          "form": true
        },
        "size": {
          "type": "string",
          "title": "Storage size",
          "default": "10Gi",
          "form": true
        }
      }
    }
  }
}